{
  "manifest_version": 3,
  "name": "Previous Tabs",
  "version": "1.0.1",
  "description": "Navigate to previously opened tabs by pressing a button. Press multiple times to go further back in history.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "commands": {
    "go-to-previous-tab": {
      "suggested_key": {
        "default": "Alt+W",
        "mac": "Alt+W"
      },
      "description": "Go to previous tab (press multiple times for further back)"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
